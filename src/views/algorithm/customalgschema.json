{
  "title":"自定义模块接口配置",
  "type":"object",
  "properties":{
    "func_zname":{
      "type":"string",
      "title":"模块中文ID",
      "description":"平台显示的模块名称，每个模块必须具有唯一中文ID",
      "default":""
    },
    "func_name":{
      "type":"string",
      "title":"模块英文ID",
      "description":"运行模块时调用的模块.py文件名称，每个模块必须具有唯一英文ID"
    },
    "func_description":{
      "type":"string",
      "format": "textarea",
      "title":"模块描述",
      "description":"选填，将鼠标悬停在模块列表中该模块上时，会出现该文本描述"
    },
    "n_input":{
      "type":"integer",
      "title":"INPUT个数",
      "description":"模块允许输入的数据源个数",
      "default":1
    },
    "n_output":{
      "type":"integer",
      "title":"OUTPUT个数",
      "description":"模块计算转化后结果数据集个数",
      "default":1
    },
    "func_args":{
      "type":"array",
      "format":"table",
      "title":"模块参数栏配置",
      "description":"参数英文ID必须与模块.py文件中定义的参数名完全匹配",
      "uniqueItems":true,
      "items":{
        "type":"object",
        "title":"参数",
        "properties":{
          "arg_name":{
            "type":"string",
            "title":"参数英文ID"
          },
          "arg_zname":{
            "type":"string",
            "title":"参数中文ID"
          },
          "arg_type":{
            "type":"string",
            "title":"参数类型",
            "enum":[
              "columns",
              "lists",
              "list",
              "bool",
              "boollist",
              "value",
              "sql_textarea",
              "filter",
              "boolsinput",
              "inputlist",
              "addComp",
              "label_rules",
              "func_rules",
              "piemapping_rules",
              "value_recommend",
              "addThreshold",
              "column_props"
            ],
            "default":"string"
          },
          "arg_value":{
            "title":"参数值",
            "type":"string"
          },
          "arg_range":{
            "type":"string",
            "title":"参数范围"
          },
          "arg_index":{
            "type":"string",
            "title":"接收数据集下标"
          },
          "arg_relation":{
            "type":"string",
            "title":"和其他参数的关系(开始下标0)"
          },
          "arg_doc":{
            "type":"string",
            "title":"参数说明文档"
          },
          "arg_noshow":{
            "type":"integer",
            "title":"首次加载是否显示(默认0或空显示,1不显示)"
          }
        }
      }
    },
    "python_editor":{
      "type":"string",
      "title":"Python执行代码块",
      "format":"python"
    },
    "module_permission":{
      "type": "string",
      "title":"模块权限",
      "description": "私有：仅自己可见  公开：群组内成员可见",
      "enum": [
        "私有",
        "公开"
      ]
    }
  }
}
